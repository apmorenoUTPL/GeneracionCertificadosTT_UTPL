@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{
    ViewBag.Title = "ROLES: Detalle";
}

<div class="container">
    <div class="row col-md-offset-1 col-md-10">
        <h1 class="centrado">@ViewBag.Title</h1>
        <br />

        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @*@Html.DisplayNameFor(model => model.Name)*@
                    Rol:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>
            </dl>
        </div>

        <p>Lista de usuarios con este rol</p>
        @if (ViewBag.UserCount == 0)
        {
            <hr />
            <p>No existen usuarios en este rol.</p>
        } else { 
            <ul>
                @foreach (var item in ViewBag.Users)
                {
                    <li>@item.UserName</li>
                }
            </ul>
        }
        <br />  
        
        <p>
            @Html.ActionLink("Regresar", "Index", "RolesAdmin", null, htmlAttributes: new { @class = "btn btn-danger" })
            @Html.ActionLink("Editar rol", "Edit", "RolesAdmin", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-success" })
        </p>
    </div>
    <div class="col-md-1"></div>
</div>

